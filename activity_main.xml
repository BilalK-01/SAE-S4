<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Identifiez vous"
        android:id="@+id/signin"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin"
        android:background="#30ffffff"
        android:hint="Email"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:background="#30ffffff"
        android:hint="Mot de Passe"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_back_hand_24"
        android:drawablePadding="20dp"
        />
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtn"
        android:layout_below="@+id/forgotpass"
        android:text="CONNECTEZ-VOUS"
        android:backgroundTint="@color/design_default_color_on_secondary"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotpass"
        android:layout_below="@+id/password"
        android:text="Mot de Passe OubliÃ©?"
        android:layout_margin="20dp"
        android:layout_alignRight="@id/password"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nouveau"
        android:layout_below="@+id/loginBtn"
        android:text="Pas de Compte?"
        android:layout_margin="10dp"
        android:layout_alignLeft="@id/password"
        android:textColor="@color/white"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creerCompte"
        android:layout_below="@+id/loginBtn"
        android:text="Creer un Compte"
        android:layout_margin="10dp"
        android:layout_alignRight="@id/password"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebook"
        android:layout_below="@+id/creerCompte"
        android:text="Continuer avec FaceBook"
        android:layout_margin="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/baseline_app_shortcut_24"

        />





</RelativeLayout>